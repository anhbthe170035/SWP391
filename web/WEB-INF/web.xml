<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    
  <!-- Servlets -->
    <servlet>
        <servlet-name>Homepage</servlet-name>
        <servlet-class>controller.Homepage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPasswordEmailValidation</servlet-name>
        <servlet-class>controller.ResetPasswordEmailValidation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Search</servlet-name>
        <servlet-class>controller.Search</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductDetail</servlet-name>
        <servlet-class>controller.ProductDetail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DetailProduct</servlet-name>
        <servlet-class>controller.DetailProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProductList</servlet-name>
        <servlet-class>controller.ProductList</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>FeedbackController</servlet-name>
        <servlet-class>controller.FeedbackController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Login</servlet-name>
        <servlet-class>controller.Login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>controller.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ResetPassword</servlet-name>
        <servlet-class>controller.ResetPassword</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserDetail</servlet-name>
        <servlet-class>controller.UserDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UserlistController</servlet-name>
        <servlet-class>controller.UserlistController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUser</servlet-name>
        <servlet-class>controller.AddUserController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HistoryOrder</servlet-name>
        <servlet-class>controller.HistoryOrder</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Orders</servlet-name>
        <servlet-class>controller.OrderController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>OrderDetails</servlet-name>
        <servlet-class>controller.OrderDetailsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CartController</servlet-name>
        <servlet-class>controller.CartController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteItemController</servlet-name>
        <servlet-class>controller.DeleteItemController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateQuantityController</servlet-name>
        <servlet-class>controller.UpdateQuantityController</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>Register</servlet-name>
        <servlet-class>controller.Register</servlet-class>
    <!-- Servlet Mappings -->
    <servlet>
        <servlet-name>CartCheckoutController</servlet-name>
        <servlet-class>controller.CartCheckoutController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConfirmCheckoutOrder</servlet-name>
        <servlet-class>controller.ConfirmCheckoutController</servlet-class>

    </servlet>
    <servlet-mapping>
        <servlet-name>Homepage</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProductList</servlet-name>
        <url-pattern>/ProductList</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPassword</servlet-name>
        <url-pattern>/resetpwd</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserDetail</servlet-name>
        <url-pattern>/userDetail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UserlistController</servlet-name>
        <url-pattern>/userlist</url-pattern>
        <url-pattern>/searchUser</url-pattern>
        <url-pattern>/editUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ResetPasswordEmailValidation</servlet-name>
        <url-pattern>/sendemail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Search</servlet-name>
        <url-pattern>/Search</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DetailProduct</servlet-name>
        <url-pattern>/DetailProduct</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUser</servlet-name>
        <url-pattern>/addUser</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HistoryOrder</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Orders</servlet-name>
        <url-pattern>/orders</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OrderDetails</servlet-name>
        <url-pattern>/orderdetails</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CartController</servlet-name>
        <url-pattern>/cart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteItemController</servlet-name>
        <url-pattern>/deleteItem</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>FeedbackController</servlet-name>
        <url-pattern>/feedback</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateQuantityController</servlet-name>
        <url-pattern>/updateQuantity</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>Register</servlet-name>
        <url-pattern>/register</url-pattern>

    <!-- Filters -->
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>filter.AdminFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoginFilter</filter-name>
        <filter-class>filter.LoginFilter</filter-class>
    </filter>
    <filter>
        <filter-name>LoggedFilter</filter-name>
        <filter-class>filter.LoggedFilter</filter-class>
    </filter>
    <!-- Filter Mappings -->
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/searchresult.jsp</url-pattern>
        <url-pattern>/userlist.jsp</url-pattern>
        <url-pattern>/addUserForm.jsp</url-pattern>
        <servlet-name>UserDetail</servlet-name>
        <servlet-name>UserlistController</servlet-name>
        <servlet-name>AddUser</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoginFilter</filter-name>
        <url-pattern>/orderlist.jsp</url-pattern>
        <url-pattern>/profile.jsp</url-pattern>
        <url-pattern>/orderDetails.jsp</url-pattern>
        <url-pattern>/orderlist.jsp</url-pattern>
        <url-pattern>/OrderHistory.jsp</url-pattern>
        <servlet-name>HistoryOrder</servlet-name>
        <servlet-name>Orders</servlet-name>
        <servlet-name>OrderDetails</servlet-name>
        <servlet-name>CartController</servlet-name>
        <servlet-name>DeleteItemController</servlet-name>
        <servlet-name>UpdateQuantityController</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>LoggedFilter</filter-name>
        <url-pattern>/login</url-pattern>
    </filter-mapping>
    <servlet-mapping>
        <servlet-name>CartCheckoutController</servlet-name>
        <url-pattern>/cartcheckout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConfirmCheckoutOrder</servlet-name>
        <url-pattern>/confirmcheckout</url-pattern>

    </servlet-mapping>
</web-app>
